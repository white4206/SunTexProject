/* 用户信息 */
.profile {
  margin-top: 30rpx;
  position: relative;
}
.profile .overview {
  display: flex;
  height: 120rpx;
  padding: 0 36rpx;
  color: #fff;
}
.profile .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #eee;
}
.profile .gray {
  filter: grayscale(100%);
}
.profile .meta {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  line-height: 30rpx;
  padding: 16rpx 0;
  margin-left: 20rpx;
}
.profile .nickname {
  max-width: 180rpx;
  margin-bottom: 16rpx;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.profile .extra {
  display: flex;
  font-size: 20rpx;
}
.profile .tips {
  font-size: 22rpx;
}
.profile .update {
  padding: 3rpx 10rpx 1rpx;
  color: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  margin-right: 10rpx;
  border-radius: 30rpx;
}
.profile .settings {
  position: absolute;
  bottom: 0;
  right: 40rpx;
  font-size: 30rpx;
  color: #fff;
}

/* 我的订单 */
.orders {
  position: relative;
  z-index: 99;
  padding: 30rpx;
  margin: 50rpx 20rpx 0;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 6rpx rgba(240, 240, 240, 0.6);
}
.orders .title {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  color: #1e1e1e;
}
.orders .title .navigator {
  font-size: 24rpx;
  color: #939393;
  float: right;
}
.orders .section {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 40rpx 20rpx 10rpx;
}
.orders .section .navigator {
  text-align: center;
  font-size: 24rpx;
  color: #333;
}
.orders .section .navigator .icon-image image {
  width: 50rpx;
  height: 50rpx;
}
.option {
  margin: 20rpx;
}
.option .option-item {
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-radius: 20rpx;
  margin: 20rpx 0;
}
.option .option-item .right_arrow image {
  width: 30rpx;
  height: 30rpx;
}