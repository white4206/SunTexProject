.custom-navbar {
  position: fixed;
  top: 0;
  width: 750rpx;
  z-index: 9999;
  background-size: cover;
  height: 240rpx;
}
.custom-navbar .title {
  padding-left: 40rpx;
}
.custom-navbar .search-box {
  margin-top: 40rpx;
  display: flex;
  align-items: center;
}
.custom-navbar .search-box .search-input {
  flex: 1;
}
.custom-navbar .search-box .search-btn {
  padding: 20rpx;
  padding-left: 0;
  display: flex;
  align-items: center;
}
.custom-navbar .search-box .search-btn .button {
  color: #ffffff;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  background-color: #337ecc;
  background-image: linear-gradient(90deg, #337ecc 0%, #79bbff 100%);
  border-radius: 100rpx;
}