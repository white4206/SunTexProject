page,
.root {
  background-color: #F2F3F5;
}
.header .option-bar {
  display: flex;
  justify-content: space-around;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.header .option-bar .option-item {
  color: #909399;
  padding: 20rpx;
}
.header .option-bar .active {
  color: #337ecc;
  font-weight: bold;
}
.header .option-bar .price-box {
  display: flex;
  align-items: center;
}
.header .option-bar .price-box .price-sort-image {
  width: 30rpx;
  height: 30rpx;
}
.container .goods-list {
  background-color: #ffffff;
}
.container .goods-list .goods-item {
  display: flex;
  padding: 20rpx;
}
.container .goods-list .goods-item .goods-image image {
  border-radius: 10rpx;
  width: 300rpx;
  height: 300rpx;
}
.container .goods-list .goods-item .goods-detail {
  padding: 20rpx;
}
.container .goods-list .goods-item .goods-detail .goods-title {
  font-weight: bold;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-bottom: 20rpx;
}
.container .goods-list .goods-item .goods-detail .goods-desc {
  font-size: 24rpx;
  color: #909399;
  height: 100rpx;
}
.container .goods-list .goods-item .goods-detail .goods-price {
  color: #cf4444;
}